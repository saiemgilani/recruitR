Package: recruitR
Title: A College Sports Recruiting Package
Version: 0.0.3
Authors@R: c(
    person("Saiem", "Gilani", , "saiem.gilani@gmail.com", role = c("aut", "cre")),
    person("Ryan", "Mann", , "mannrcfe@gmail.com", role = "aut")
